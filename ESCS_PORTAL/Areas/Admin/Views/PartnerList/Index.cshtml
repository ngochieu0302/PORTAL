@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Hợp đồng bảo hiểm sức khỏe con người";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageTitle{
    <nav class="ms-auto text-nowrap d-none d-md-block" aria-label="breadcrumb">
        <ol class="breadcrumb flex-nowrap">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Health" asp-action="Index" class="text-primary">Trang chủ</a></li>
            <li class="breadcrumb-item text-themecolor">Hợp đồng bảo hiểm sức khỏe con người</li>
        </ol>
    </nav>
}
    <div class="row h-100">
        <div class="col-12 h-100">
            <div class="card shadow border h-100">
                <div class="card-body d-flex flex-column">
                    <form name="frmTimKiem" method="post" novalidate="novalidate">
                        <div class="row">
                            <div class="col-12 col-sm-6 col-md-3 col-xxl-2 mb-4 d-none">
                                <select id="ma_doi_tac" name="ma_doi_tac"></select>
                                <label class="form-label select-label">Đối tác</label>
                            </div>
                            <div class="col-12 col-sm-6 col-md-3 col-xxl-2 mb-4">
                                <select id="ma_chi_nhanh" name="ma_chi_nhanh"></select>
                                <label class="form-label select-label">Đơn vị cấp đơn</label>
                            </div>
                            <div class="col-6 col-sm-6 col-md-3 col-xxl-2 mb-4">
                                <div class="form-outline">
                                    <input type="text" class="form-control" name="nd" />
                                    <label class="form-label">Số hợp đồng</label>
                                </div>
                            </div>
                            <div class="col-6 col-sm-6 col-md-3 col-xxl-2 mb-4">
                                <div class="form-outline">
                                    <input type="text" class="form-control" name="ten_ndbh" />
                                    <label class="form-label">Tên NĐBH</label>
                                </div>
                            </div>
                            <div class="col-6 col-sm-6 col-md-3 col-xxl-2 mb-4">
                                <div class="form-outline datepicker" data-mdb-inline="true" data-mdb-format="dd/mm/yyyy">
                                    <input type="text" class="form-control" name="ngay_d" value-format="number" />
                                    <label class="form-label">Từ ngày</label>
                                </div>
                            </div>
                            <div class="col-6 col-sm-6 col-md-3 col-xxl-2 mb-4">
                                <div class="form-outline datepicker" data-mdb-inline="true" data-mdb-format="dd/mm/yyyy">
                                    <input type="text" class="form-control" name="ngay_c" value-format="number" />
                                    <label class="form-label">Đến ngày</label>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-md-3 col-xxl-1 mb-4">
                                <div class="row">
                                    <div class="col">
                                        <button type="button" class="btn btn-primary btn-block" id="btnTimKiem">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="flex-fill overflow-hidden" style="height:0;">
                        <div id="tblHopDongConNguoi" class="h-100 datatable-sm">
                        </div>
                    </div>
                    <div></div>
                </div>
            </div>
        </div>
    </div>
    <partial name="_Modal.cshtml" />
    @section Scripts{
        <script src="~/js/app/Contract/service/HealthService.js" asp-append-version="true"></script>
        <script src="~/js/app/Contract/Health.js" asp-append-version="true"></script>
    }