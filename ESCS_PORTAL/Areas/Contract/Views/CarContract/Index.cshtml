<div class="container-fluid h-100 overflow-auto d-flex flex-column gap-2 py-2">
    <div id="divThongTinTKiemHopDongXe" class="card h-100 shadow">
        <div class="card-body d-flex flex-column">
            <form name="frmTimKiem" method="post" novalidate="novalidate">
                <div class="row">
                    <div class="col-12 col-sm-6 col-md-3 mb-4 d-none">
                        <select class="select" id="ma_doi_tac" name="ma_doi_tac"></select>
                        <label class="form-label select-label">Đối tác</label>
                    </div>
                    <div class="col-6 col-md-3 col-xxl-2 mb-4">
                        <select class="select" id="ma_chi_nhanh" name="ma_chi_nhanh"></select>
                        <label class="form-label select-label">Đơn vị cấp đơn</label>
                    </div>
                    <div class="col-6 col-md-2 col-xxl-2 mb-4">
                        <div class="form-outline">
                            <input type="text" class="form-control" name="bien_xe" autocomplete="off" />
                            <label class="form-label">Biển xe</label>
                        </div>
                    </div>
                    <div class="col-6 col-md-2 col-xxl-2 mb-4">
                        <div class="form-outline">
                            <input type="text" class="form-control" name="nd" autocomplete="off" />
                            <label class="form-label">Số hợp đồng/Số GCN</label>
                        </div>
                    </div>
                    <div class="col-6 col-md-3 col-xxl-3 mb-4">
                        <div class="form-outline">
                            <input type="text" class="form-control" name="ten_kh" autocomplete="off" />
                            <label class="form-label">Tên khách hàng</label>
                        </div>
                    </div>
                    <div class="col-12 col-md-3 col-xxl-3 mb-4 ms-auto">
                        <div class="row">
                            <div class="col-12 col-md-6 col-xxl-4 ms-auto">
                                <button type="button" class="btn btn-primary btn-block" id="btnTimKiem">
                                    <i class="fas fa-magnifying-glass"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="flex-fill overflow-hidden" style="height:0;">
                <div id="tblHopDongXeCoGioi" class="h-100 datatable-sm">
                </div>
            </div>
            <div class="d-flex pt-3">
                <span class="me-3 text-nowrap"><span id="tong_so_dong"></span> kết quả | <span id="tong_so_trang"></span> trang</span>
                <button class="btn btn-secondary btn-sm mx-2" onclick="loadPage()"><i class="fas fa-arrow-left"></i></button>
                <select id="selectPhanTrang"></select>
                <button class="btn btn-secondary btn-sm mx-2" onclick="loadPage('next')"><i class="fas fa-arrow-right"></i></button>
            </div>
        </div>
    </div>
    <partial name="_CarClaimContentTab1.cshtml" />
    <partial name="_CarClaimContentTab2.cshtml" />
</div>


